# NeuroTrade Nexus (NTN) - Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application secret key (generate a secure random string)
SECRET_KEY=your-secret-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# PostgreSQL Configuration (if used)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=neurotrade_nexus
POSTGRES_USER=ntn_user
POSTGRES_PASSWORD=your-postgres-password

# MongoDB Configuration (if used)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=neurotrade_nexus
MONGO_USER=ntn_user
MONGO_PASSWORD=your-mongo-password

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# ZeroMQ Configuration
ZMQ_FRONTEND_PORT=5555
ZMQ_BACKEND_PORT=5556
ZMQ_PUBLISHER_PORT=5557
ZMQ_SUBSCRIBER_PORT=5558

# RabbitMQ Configuration (if used)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Trading Platform APIs
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=true

OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret-key
OKX_PASSPHRASE=your-okx-passphrase
OKX_SANDBOX=true

BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret-key
BYBIT_TESTNET=true

# Market Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
QUANDL_API_KEY=your-quandl-key
FINNHUB_API_KEY=your-finnhub-key
TWELVE_DATA_API_KEY=your-twelve-data-key

# News and Sentiment APIs
NEWS_API_KEY=your-news-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-key
GOOGLE_AI_MODEL=gemini-pro

# Local AI Model Configuration
LOCAL_MODEL_PATH=/path/to/local/model
LOCAL_MODEL_DEVICE=cuda
LOCAL_MODEL_BATCH_SIZE=32

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger Configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://localhost:14268/api/traces

# ELK Stack Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Encryption Configuration
ENCRYPTION_KEY=your-encryption-key
ENCRYPTION_ALGORITHM=AES-256-GCM

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CA_PATH=/path/to/ssl/ca.pem

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Risk Limits
MAX_POSITION_SIZE=10000
MAX_DAILY_LOSS=1000
MAX_DRAWDOWN_PERCENT=5
MAX_LEVERAGE=10

# Risk Monitoring
RISK_CHECK_INTERVAL=5
RISK_ALERT_THRESHOLD=0.8
RISK_EMERGENCY_STOP=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Parameters
DEFAULT_TRADING_PAIR=BTC/USDT
DEFAULT_TIMEFRAME=1h
DEFAULT_ORDER_TYPE=limit
DEFAULT_SLIPPAGE=0.001

# Strategy Configuration
STRATEGY_UPDATE_INTERVAL=60
STRATEGY_BACKTEST_PERIOD=30
STRATEGY_OPTIMIZATION_ENABLED=true

# Portfolio Management
PORTFOLIO_REBALANCE_INTERVAL=3600
PORTFOLIO_MAX_ASSETS=20
PORTFOLIO_MIN_ALLOCATION=0.01

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# Slack Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#trading-alerts
SLACK_USERNAME=NeuroTrade-Bot

# Discord Configuration
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_USERNAME=NeuroTrade-Bot

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
HOT_RELOAD=true
AUTO_RESTART=true
DEV_SERVER_PORT=8001

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_DB=1
TEST_TIMEOUT=30

# Debugging
DEBUG_TOOLBAR=true
PROFILING_ENABLED=false
MEMORY_PROFILING=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=neurotrade-nexus
COMPOSE_FILE=docker-compose.yml
COMPOSE_PROFILES=development

# Container Configuration
CONTAINER_TIMEZONE=UTC
CONTAINER_LOCALE=en_US.UTF-8

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Threading and Concurrency
MAX_WORKERS=8
THREAD_POOL_SIZE=16
ASYNC_POOL_SIZE=32

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_BACKEND=redis

# Memory Management
MAX_MEMORY_USAGE=2048
GARBAGE_COLLECTION_THRESHOLD=100

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Recovery Configuration
AUTO_RECOVERY_ENABLED=true
RECOVERY_TIMEOUT=300
RECOVERY_MAX_ATTEMPTS=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Module Toggles
ENABLE_APIFORGE=true
ENABLE_DATASPIDER=true
ENABLE_SCANPULSE=true
ENABLE_OPTICORE=true
ENABLE_TRADEGUARD=true
ENABLE_NEUROHUB=true
ENABLE_MMS=true
ENABLE_REVIEWGUARD=true
ENABLE_ASTSCONSOLE=true
ENABLE_TACORESERVICE=true
ENABLE_AISTRATEGYASSISTANT=true
ENABLE_OBSERVABILITYCENTER=true

# Feature Toggles
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_OPTIMIZATION=true
ENABLE_ALERTS=true
ENABLE_REPORTING=true

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_FEATURES=false
ENABLE_ALPHA_FEATURES=false